{
  "name": "blockchain-service",
  "version": "1.0.0",
  "description": "Hardhat blockchain service with snapshot-based persistence",
  "scripts": {
    "start": "hardhat node",
    "deploy": "hardhat run scripts/deploy_contract.js --network localhost",
    "compile": "hardhat compile",
    "snapshot:export": "node utils/snapshot.js export",
    "snapshot:import": "node utils/snapshot.js import",
    "snapshot:list": "node utils/snapshot.js list"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ethers": "^6.11.0",
    "hardhat": "^2.22.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0"
  }
}
